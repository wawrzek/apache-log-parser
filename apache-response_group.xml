<?xml version="1.0"?>
<config>
    <apicredentials apikey="%API_KEY%" secretkey="%SECRET_KEY%"/>
    <agent name="Apache Agent" interval="60">
         <monitor name="Apache monitor - Response groups" tag="apache">
            <exectemplate>/usr/local/monitis/apache-log-parser.py -r "min" -m "response_group"</exectemplate>
            <metric name="Number of 2XX">
                <type>integer</type>
                <uom>Response/min</uom>
                <regex>.{5},\s+(\d+)</regex>
            </metric>
            <metric name="Number of 4XX">
                <type>integer</type>
                <uom>Response/min</uom>
                <regex>.{5},\s+\d+,\d+(\d+)</regex>
            </metric>
            <metric name="MONITIS_CHECK_TIME">
                <type>integer</type>
                <uom>timestamp</uom>
                <regex>(\d{2}\:\d{2})</regex>
            </metric>
        </monitor>
    </agent>
</config>
